<Window x:Class="Jeffrey_Malo_MultileaseTDD.frmCustomerInfo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Jeffrey_Malo_MultileaseTDD"
        mc:Ignorable="d"
        Title="Customer Info - MultiLease Management System" Height="500" Width="500" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" Closing="frmCustomerInfo_Closing">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="60" />
            <ColumnDefinition Width="100" />
            <ColumnDefinition Width="190" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="60" />
        </Grid.RowDefinitions>
        <Label Content="First Name :" HorizontalContentAlignment="Right" HorizontalAlignment="Left" Margin="0,1,0,0" VerticalAlignment="Top" Width="90" Grid.Column="1" Grid.Row="1"/>
        <TextBox x:Name="txtFirstName" Text="{Binding FirstName, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Width="185" Height="26" Grid.Column="2" Grid.Row="1" TextChanged="Validate_Info"/>
        <Label Content="Last Name :" HorizontalContentAlignment="Right" HorizontalAlignment="Left" VerticalAlignment="Top" Width="90" Grid.Column="1" Grid.Row="2"/>
        <TextBox x:Name="txtLastName" Text="{Binding LastName, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Width="185" Height="26" Grid.Column="2" Grid.Row="1" Margin="0,41,0,0" Grid.RowSpan="2" TextChanged="Validate_Info"/>
        <Label Content="Address :" HorizontalContentAlignment="Right" HorizontalAlignment="Left" Margin="0,41,0,0" VerticalAlignment="Top" Width="90" Grid.Row="2" Grid.Column="1" Grid.RowSpan="2"/>
        <TextBox x:Name="txtAddress" HorizontalAlignment="Left" Margin="0,41,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="185" Height="26" Grid.Column="2" Grid.Row="2" Grid.RowSpan="2" TextChanged="Validate_Info"/>
        <Label Content="City :" HorizontalContentAlignment="Right" HorizontalAlignment="Left" VerticalAlignment="Top" Width="90" Grid.Column="1" Grid.Row="4"/>
        <TextBox x:Name="txtCity" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Width="185" Height="26" Grid.Column="2" Grid.Row="4" TextChanged="Validate_Info"/>
        <Label Content="Province :" HorizontalContentAlignment="Right" HorizontalAlignment="Left" Margin="59,41,0,0" VerticalAlignment="Top" Width="90" Grid.Row="4" Grid.ColumnSpan="2" Grid.RowSpan="2"/>
        <ComboBox x:Name="listProvince" HorizontalAlignment="Left" Margin="0,41,0,0" VerticalAlignment="Top" Width="185" Height="26" Grid.Column="2" Grid.Row="4" Grid.RowSpan="2" SelectionChanged="Validate_Selection" />
        <Label Content="Postal Code :" HorizontalContentAlignment="Right" HorizontalAlignment="Left" VerticalAlignment="Top" Width="91" Grid.Column="1" Grid.Row="6"/>
        <TextBox x:Name="txtPostalCode" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Width="185" Height="26" Grid.Column="2" Grid.Row="5" Margin="0,41,0,0" Grid.RowSpan="2" TextChanged="Validate_Info"/>
        <Label Content="Phone # :" HorizontalContentAlignment="Right" HorizontalAlignment="Left" Margin="0,41,0,0" VerticalAlignment="Top" Width="91" Grid.Row="6" Grid.Column="1" Grid.RowSpan="2"/>
        <TextBox x:Name="txtPhone" HorizontalAlignment="Left" Margin="0,41,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="186" Height="26" Grid.Column="2" Grid.Row="6" Grid.RowSpan="2" TextChanged="Validate_Info"/>
        <Button x:Name="saveCustBtn" Content="SAVE" HorizontalAlignment="Left" Margin="53,0,0,0" VerticalAlignment="Center" Height="25" Width="74" Grid.Column="2" Grid.Row="9" Click="saveCustBtn_Click" IsEnabled="False"/>

    </Grid>
</Window>
