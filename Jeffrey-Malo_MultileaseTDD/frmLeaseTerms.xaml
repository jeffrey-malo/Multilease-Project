<Window x:Class="Jeffrey_Malo_MultileaseTDD.frmLeaseTerms"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Jeffrey_Malo_MultileaseTDD"
        mc:Ignorable="d"
        Title="Lease Terms - MultiLease Management System" Height="350" Width="450" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="80" />
            <ColumnDefinition Width="100" />
            <ColumnDefinition Width="150" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="80" />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="60" />
            <RowDefinition Height="40" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Label Content="Years :" HorizontalContentAlignment="Right" HorizontalAlignment="Left" VerticalAlignment="Center" Width="95" Grid.Column="1" Grid.Row="1" Height="30"/>
        <ComboBox x:Name="yearsList" VerticalContentAlignment="Center" HorizontalAlignment="Left" VerticalAlignment="Top" Width="96" Height="26" Grid.Column="2" Grid.Row="1" SelectionChanged="Validate_Selection"/>
        <Label Content="Max KM :" HorizontalContentAlignment="Right" HorizontalAlignment="Center" VerticalAlignment="Top" Width="90" Grid.Column="1" Grid.Row="2"/>
        <TextBox x:Name="txtMaxKm" VerticalContentAlignment="Center" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Width="115" Height="26" Grid.Column="2" Grid.Row="2" TextChanged="Validate_Info"/>
        <Label Content="$/KM extra :" HorizontalContentAlignment="Right" HorizontalAlignment="Left" VerticalAlignment="Top" Width="95" Grid.Column="1" Grid.Row="3"/>
        <TextBox x:Name="txtExtraKm" VerticalContentAlignment="Center" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Width="115" Height="26" Grid.Column="2" Grid.Row="3" TextChanged="Validate_Info"/>
        <Button x:Name="cancelTermsBtn" Content="CANCEL" HorizontalAlignment="Left" Margin="25,6,0,0" VerticalAlignment="Top" Height="24" Width="70" Grid.Column="1" Grid.Row="5" Click="cancelTermsBtn_Click"/>
        <Button x:Name="saveTermsBtn" Content="SAVE" HorizontalAlignment="Center" Margin="0,6,0,0" VerticalAlignment="Top" Height="24" Width="70" Grid.Column="2" Grid.Row="5" Click="saveTermsBtn_Click" IsEnabled="False"/>
        <TextBox x:Name="txtTermsId" Text="{Binding TermsID, UpdateSourceTrigger=PropertyChanged}" Grid.Column="2" HorizontalAlignment="Left" Grid.Row="4" TextWrapping="Wrap" VerticalAlignment="Center" Width="120" IsEnabled="False" Visibility="Hidden"/>

    </Grid>
</Window>
