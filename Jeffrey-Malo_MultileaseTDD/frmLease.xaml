<Window x:Class="Jeffrey_Malo_MultileaseTDD.frmLease"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Jeffrey_Malo_MultileaseTDD"
        mc:Ignorable="d"
        Title="Lease - MultiLease Management System" Height="300" Width="300" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" Closing="Window_Closing">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="110" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20" />
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="75" />
            <RowDefinition Height="40" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Button x:Name="newLeaseBtn" Content="Add New Lease" VerticalAlignment="Top" Height="28" Grid.Column="1" Grid.Row="3" Margin="3,2,3,0" Click="newLeaseBtn_Click"/>
        <Button x:Name="modifyLeaseBtn" Content="Modify Lease" VerticalAlignment="Top" Height="28" Grid.Column="1" Grid.Row="3" Margin="3,42,3,0" Click="modifyLeaseBtn_Click"/>
        <Button x:Name="exitBtn" Content="Exit" Margin="3,0,3,0" VerticalAlignment="Center" Height="30" Grid.Column="1" Grid.Row="4" Click="exitBtn_Click"/>
        <Label x:Name="lblUsername"  Content="Signed in as:" VerticalContentAlignment="Top" HorizontalAlignment="Center" Width="74" FontSize="10" Margin="0,5,0,5" Grid.Row="1"/>
        <TextBox x:Name="txtUsername" Grid.Column="1" VerticalContentAlignment="Top" HorizontalAlignment="Left" TextWrapping="Wrap" Width="107" FontSize="10" IsReadOnly="True" Grid.Row="1" Margin="0,5,0,10"/>
    </Grid>
</Window>
