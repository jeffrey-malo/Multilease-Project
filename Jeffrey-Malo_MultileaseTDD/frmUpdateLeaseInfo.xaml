<Window x:Class="Jeffrey_Malo_MultileaseTDD.frmUpdateLeaseInfo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Jeffrey_Malo_MultileaseTDD"
        mc:Ignorable="d"
        Title="Update Lease Information - MultiLease Management System" Height="500" Width="600" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" Activated="frmUpdateLeaseInfo_Activated">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="30" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="65" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="100" />
        </Grid.RowDefinitions>

        <Label Content="LeaseID:" HorizontalAlignment="Left" VerticalAlignment="Top" HorizontalContentAlignment="Right" Width="180" Grid.Column="1" Height="24" Margin="0,22,0,0" />
        <TextBox x:Name="txtLeaseID" VerticalContentAlignment="Center"  HorizontalAlignment="Left" VerticalAlignment="Center" Width="170" Height="26" Grid.Column="2" IsReadOnly="True" TextChanged="Validate_Info"/>
        <Label Content="Customer Name:" HorizontalAlignment="Left" VerticalAlignment="Top" HorizontalContentAlignment="Right" Width="180" Grid.Column="1" Height="25" Grid.Row="1"/>
        <TextBox x:Name="txtCustomerName" VerticalContentAlignment="Center" HorizontalAlignment="Left" VerticalAlignment="Top" Width="170" Height="26" Grid.Column="2" Grid.Row="1" IsReadOnly="True" TextChanged="Validate_Info"/>
        <Label Content="VIN:" HorizontalAlignment="Left" HorizontalContentAlignment="Right" VerticalAlignment="Top" Width="180" Grid.Column="1" Height="27" Grid.Row="2" />
        <TextBox x:Name="txtVinNumber" VerticalContentAlignment="Center" HorizontalAlignment="Left" Margin="0,0,0,18" TextWrapping="Wrap" Width="170" Grid.Column="2" Grid.Row="2" TextChanged="Validate_Info"/>
        <Label Content="Lease Begin Date:" HorizontalContentAlignment="Right" HorizontalAlignment="Left" Margin="0,45,0,0" VerticalAlignment="Top" Width="180" Grid.Column="1" Height="28" Grid.Row="2" Grid.RowSpan="2"/>
        <Label Content="First Payment Date:" HorizontalContentAlignment="Right" HorizontalAlignment="Left" VerticalAlignment="Top" Width="180" Grid.Column="1" Grid.Row="4"/>
        <DatePicker x:Name="beginDatePicker" HorizontalAlignment="Left" Margin="0,45,0,0" VerticalAlignment="Top" Width="136" Grid.Column="2" Height="29" Grid.Row="2" Grid.RowSpan="2" SelectedDateChanged="Validate_Date"/>
        <DatePicker x:Name="firstPaymentDatePicker" HorizontalAlignment="Left" VerticalAlignment="Top" Width="136" Grid.Column="2" Grid.Row="4" Height="26" SelectedDateChanged="Validate_Date"/>
        <Label Content="Monthly Payment:" HorizontalContentAlignment="Right" HorizontalAlignment="Left" Margin="0,2,0,0" VerticalAlignment="Top" Width="180" Grid.Column="1" Grid.Row="5"/>
        <Label Content="Number of Payments:" HorizontalContentAlignment="Right" HorizontalAlignment="Left" VerticalAlignment="Top" Width="180" Grid.Column="1" Grid.Row="6"/>
        <TextBox x:Name="txtMonthlyAmount" HorizontalAlignment="Left" Margin="0,45,0,0" VerticalAlignment="Top" Width="136" Grid.Column="2" Grid.Row="4" Grid.RowSpan="2" Height="28" TextChanged="Validate_Info"/>
        <ComboBox x:Name="numberOfPaymentsList" HorizontalAlignment="Left" VerticalAlignment="Top" Width="56" Height="28" Grid.Column="2" Grid.Row="6" SelectionChanged="Validate_Selection"/>
        <Label Content="Lease Terms:" HorizontalContentAlignment="Right" HorizontalAlignment="Left" VerticalAlignment="Top" Width="170" Grid.Column="1" Grid.Row="6" Margin="0,45,0,0" Grid.RowSpan="2"/>
        <TextBox x:Name="txtLeaseTermsID" VerticalContentAlignment="Center" HorizontalAlignment="Left" Margin="0,45,0,0" VerticalAlignment="Top" Width="170" Grid.Column="2" Grid.Row="6" Grid.RowSpan="2" Height="29" IsReadOnly="True" TextChanged="Validate_Info"/>
        <Button x:Name="leaseTermsBtn" Content="Update Lease Terms" HorizontalAlignment="Left" Margin="10,45,0,0" VerticalAlignment="Top" Width="120" Height="26" Grid.Column="3" Grid.RowSpan="2" Grid.Row="6" Click="leaseTermsBtn_Click"/>
        <Button x:Name="cancelBtn" Content="CANCEL" HorizontalAlignment="Left" Margin="141,24,0,0" VerticalAlignment="Top" Width="124" Height="26" Grid.Column="1" Grid.Row="8" Click="cancelBtn_Click" Grid.ColumnSpan="2"/>
        <Button x:Name="saveBtn" Content="SAVE" HorizontalAlignment="Left" Margin="95,24,0,0" VerticalAlignment="Top" Width="120" Height="26" Grid.Column="2" Grid.Row="8" Click="saveBtn_Click" Grid.ColumnSpan="2"/>
    </Grid>
</Window>
